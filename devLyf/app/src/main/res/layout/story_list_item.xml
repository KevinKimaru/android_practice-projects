<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/list_item_story"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@drawable/shadow"
              android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">


        <TextView
            android:id="@+id/tv_story_name_tag"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/tag_circle"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            tools:text="K"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="7"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:textAlignment="center">

            <TextView
                android:id="@+id/tv_story_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="kevinkimaru"/>

            <TextView
                android:id="@+id/tv_story_digit1_todo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:textSize="16sp"
                android:text="2w"
                tools:text="2w"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_story"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif"
        android:ellipsize="end"
        android:maxLines="3"
        android:paddingTop="16dp"
        android:textSize="18sp"
        tools:text="I've just added python to my skill set.Check out my profile page"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:weightSum="8">

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/btns"/>

        <TextView
            android:id="@+id/tv_story_digit2_todo"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:text="2"
            tools:text="2"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:src="@drawable/btns"/>

        <View
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="35dp"/>


        <ImageButton
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="right"
            android:src="@drawable/btns"/>

        <TextView
            android:id="@+id/tv_story_digit3_todo"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal|left"
            android:text="0"
            tools:text="0"/>


    </LinearLayout>
</LinearLayout>